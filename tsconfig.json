{
    "compilerOptions": {
        "outDir": "./dist",          // 編譯後的 js 檔案會放到 dist 目錄
        "rootDir": "./src",          // 將原始 TypeScript 檔案放在 src 目錄
        "esModuleInterop": true,     // 使得 CommonJS 模組與 ES6 模組能夠互相兼容
        "moduleResolution": "node",  // 模組解析策略，通常選擇 node
        "target": "ES2020",          // 設定編譯後的 JavaScript 目標版本
        "module": "ESNext",          // 設定模組系統
        "strict": true,              // 啟用所有 TypeScript 檢查
        "skipLibCheck": true,        // 跳過庫檢查，加速編譯過程
        "forceConsistentCasingInFileNames": true // 確保檔案名稱一致
    },
    "include": [
        "src/**/*"                   // 包含 src 目錄下的所有檔案
    ],
    "exclude": [
        "node_modules"               // 排除 node_modules
    ]
}
